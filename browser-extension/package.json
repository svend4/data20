{
  "name": "data20-browser-extension",
  "version": "1.0.0",
  "description": "Data20 Knowledge Base Browser Extension with Python/WebAssembly tools",
  "author": "Data20 Team",
  "license": "MIT",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "test": "jest",
    "lint": "eslint src/",
    "pack": "npm run build && web-ext build --source-dir=dist",
    "start:chrome": "web-ext run --target=chromium --source-dir=dist",
    "start:firefox": "web-ext run --target=firefox-desktop --source-dir=dist"
  },
  "dependencies": {
    "idb": "^7.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "style-loader": "^3.3.3",
    "web-ext": "^7.9.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  }
}
