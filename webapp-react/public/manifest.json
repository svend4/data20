{
  "name": "Data20 Knowledge Base",
  "short_name": "Data20",
  "description": "Advanced data analysis and knowledge management platform with 57+ powerful tools",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#667eea",
  "theme_color": "#667eea",
  "orientation": "any",
  "scope": "/",
  "icons": [
    {
      "src": "/logo192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/logo512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Home screen with tools catalog"
    },
    {
      "src": "/screenshots/mobile-tools.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Tools list on mobile"
    }
  ],
  "categories": [
    "productivity",
    "business",
    "utilities",
    "education"
  ],
  "shortcuts": [
    {
      "name": "Run Tool",
      "short_name": "Run",
      "description": "Quickly run a data analysis tool",
      "url": "/run",
      "icons": [
        {
          "src": "/icons/run-tool.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "View Jobs",
      "short_name": "Jobs",
      "description": "View job execution history",
      "url": "/jobs",
      "icons": [
        {
          "src": "/icons/jobs.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "windows",
      "url": "https://github.com/data20/releases/latest/download/Data20-Setup.exe"
    },
    {
      "platform": "macos",
      "url": "https://github.com/data20/releases/latest/download/Data20.dmg"
    }
  ],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "data",
          "accept": [
            "text/csv",
            "application/json",
            "text/plain",
            ".csv",
            ".json",
            ".txt"
          ]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/open",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"],
        "text/plain": [".txt", ".log"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+data20",
      "url": "/tool?name=%s"
    }
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  "handle_links": "preferred"
}
